        <colspec colnum="1" colname="col1" colwidth="*" />
        <colspec colnum="2" colname="col2" colwidth="*" />
        <colspec colnum="3" colname="col3" colwidth="*" />
        <colspec colnum="4" colname="col4" colwidth="*" />
        <thead>
          <row>
            <entry colname="col1">FEATURE 
				</entry>
            <entry colname="col2">TEXT 
				</entry>
            <entry colname="col3">NUMERIC 1.0 
				</entry>
            <entry colname="col4">NUMERIC 2.0 
				</entry>
          </row>
        </thead>
        <tbody>
          <row>
            <entry colname="col1">Displays as a report 
				</entry>
