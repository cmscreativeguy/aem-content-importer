<task id="task_51187E8BF19544DDA9EF2057E6F11D35"> 
  <title>Add an Alert</title> 
  <shortdesc>Steps that describe how to add an alert in marketing reports. 
  </shortdesc> 
  <prolog> 
	 <metadata> 
		<othermeta name="solution" content="Analytics"/> 
		<othermeta name="topic" content="Reports and analytics"/> 
		<othermeta name="subtopic" content="Alerts"/> </metadata>
  </prolog> 
  <taskbody> 
	 <steps id="steps_98ADA4CE726646EEB09EA39A57C6796C"> 
		<step id="step_445F9A4B9CFA46198ADB30B97B1D1DFF"> 
		  <cmd>Open the report where you want to set an alert. 
		  </cmd> 
		</step> 
		<step id="step_DE7B118820224D7581AA2B5C32505C3C"> 
		  <cmd>Click 
			 <uicontrol>More</uicontrol> &gt; 
			 <uicontrol>Add Alert</uicontrol>. 
		  </cmd> 
		</step> 
		<step id="step_EA403DD18711440BBB1F459A88939CD8"> 
		  <cmd>Configure the options described in 
			 <xref
			  href="alerts.xml#concept_8AB25AF6FB52478DB98C1BA4577A2E16/section_21B1D4DC4264464586F07624FBC09F0B"
			  format="dita" scope="local"><?xm-replace_text Alerts Field Descriptions?></xref>.
			 
		  </cmd> 
		</step> 
		<step id="step_52B75AFE1A9C46D188B2F53B49D71A0F"> 
		  <cmd>Click 
			 <uicontrol>Save</uicontrol>. 
		  </cmd> 
		</step> 
	 </steps> 
  </taskbody> 
  <task id="task_2ADF2A05EB784B8BBAFE293AC8243C46"> 
	 <title>View or Edit Existing Alerts</title> 
	 <shortdesc> <?xm-replace_text Short Description?>
	 </shortdesc> 
	 <taskbody> 
		<context id="context_C860259201F14B03B61F2FADD119692F"> 
		  <p> <?xm-replace_text Task Context?>
		  </p> 
		</context> 
		<steps id="steps_BEB912E7CBE14EBD9E7B506C4634E3D4"> 
		  <step id="step_A3BC8DB1F7554C049B68ED236FD81984"> 
			 <cmd>Go to 
				<uicontrol>Analytics</uicontrol> &gt; 
				<uicontrol>Components</uicontrol> &gt; 
				<uicontrol>Manage Alerts</uicontrol>. 
			 </cmd> 
		  </step> 
		</steps> 
	 </taskbody> 
  </task> 
</task>
