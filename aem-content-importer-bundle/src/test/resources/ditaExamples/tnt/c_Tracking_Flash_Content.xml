          <colspec colnum="1" colname="col1" colwidth="1.00*" />
          <colspec colnum="2" colname="col2" colwidth="3.37*" />
          <thead>
            <row>
              <entry colname="col1">Original Code 
				</entry>
              <entry colname="col2">Changed Code 
				</entry>
            </row>
          </thead>
          <tbody>
            <row>
              <entry colname="col1">
                <p>
                  <codeblock outputclass="syntax html">on(release) {

getURL("...");

} </codeblock>
                </p>
              </entry>
              <entry colname="col2">
                <p>
                  <codeblock outputclass="syntax html">
loadVariables("http://clientcode.tt.omtrdc.net/m2/​clientcode/ubox/raw​?mbox=mbox-name-flashclick​&amp;mboxDefault=/images/log.gif​&amp;mboxContentType=image.gif",
_root); getURL("..."); 
					 </codeblock>
