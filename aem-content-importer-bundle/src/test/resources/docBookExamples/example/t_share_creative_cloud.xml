<task id="task_4F67EF42EA5341DAA64081AFA23D9F11">
  <title>Share a Marketing Cloud folder to the Creative Cloud</title>
  <shortdesc> Set up folder sharing in the 
	 <keyword>Marketing Cloud</keyword>, to share assets with 
	 <keyword>Creative Cloud</keyword> users.
  </shortdesc>
  <prolog>
    <metadata>
      <keywords>
        <keyword>asset sharing</keyword>
        <keyword>Creative Cloud</keyword>
      </keywords>
      <othermeta name="solution" content="Marketing Cloud" />
    </metadata>
  </prolog>
  <taskbody>
    <context id="context_7DA8E204537D47B6B1190BC5D7AAE5BF"></context>
    <steps id="steps_1E4402C8D7014757AF82AFD2E7640075">
      <step id="step_A6E8689722AE4F138F3DBC387235DC8E">
        <cmd>
          <xref href="t_sign_in.xml#task_1BFE87E20DCB44078CAC82F3CD44B985" format="dita" scope="local">
            <?xm-replace_text Sign in to the Adobe Marketing Cloud?>
          </xref>. 
		  </cmd>
      </step>
      <step id="step_0400EB425BFE44F59B35B0C3D62B0B20">
        <cmd> Click 
			 <uicontrol>Assets</uicontrol>, then click 
			 <uicontrol>Add Folder</uicontrol>. 
		  </cmd>
        <stepresult>
          <?xm-replace_text Step Result?>
        </stepresult>
      </step>
      <step id="step_29B205D7953242E4A7E9C35BE6C78C30">
        <cmd>On the new folder, click 
			 <uicontrol>Share Using Creative Cloud</uicontrol>.
		  </cmd>
        <stepresult>
          <p>
            <image href="graphics/share_using_cc.png" id="image_BD778F44BEFC414DB09F39903E086303">
              <?xm-replace_text Step Result?>
            </image>
          </p>
        </stepresult>
      </step>
      <step id="step_BA17CFA185284641A9B878BA29551996">
        <cmd>On the 
			 <wintitle>Share to Creative Cloud</wintitle> page, select a user,
			 then click 
			 <uicontrol>Add</uicontrol>.
		  </cmd>
        <stepresult>
          <p>
            <image href="graphics/share_to_cc.png" id="image_A58B5F237CCD477D8C0B2691E7BFC5E1">
              <?xm-replace_text Step Result?>
            </image>
          </p>
        </stepresult>
      </step>
      <step id="step_5EF58430E9CF443C9037F9823A1ADA6D">
        <cmd>Click 
			 <uicontrol>Share</uicontrol>.
		  </cmd>
        <stepresult>
          <?xm-replace_text Step Result?>
        </stepresult>
      </step>
      <step id="step_1233631ADEEF425E8C559D4416DF6923">
        <cmd>Launch the 
			 <keyword>Creative Cloud</keyword> and look for the invite
			 notification with a link to the folder.
		  </cmd>
        <stepresult>
          <?xm-replace_text Step Result?>
        </stepresult>
      </step>
    </steps>
  </taskbody>
